@model BookingStatus
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-header" style="display:flex;justify-content:space-between">
                <h3>
                    Rooms
                </h3>
                <div>
                    <a asp-action="Index" class="btn btn-danger text-white rounded-pill" style="margin-right:10px">Back</a>

                </div>
            </div>

            <div class="table-responsive">

                <table class="display nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>Booking Status</th>
                            <th>Rooms</th>
                            <th>Room Type</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>@Model.Name</td>


                            <td>
                                @foreach (BookingRoom bookingRoom in Model.BookingRooms)
                                {
                                    <p>@bookingRoom.Rooms.Name</p>

                                }
                            </td>



                            <td>
                                @if (Model.IsDeactive)
                                {
                                    <span style="padding:1px 2px; background-color:red;color:white">Deactive</span>
                                }
                                else
                                {
                                    <span style="padding:1px 2px; background-color:green;color:white">Active</span>
                                }
                            </td>

                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

