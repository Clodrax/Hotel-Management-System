@model Guest
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-header" style="display:flex;justify-content:space-between">

                <div>
                    <a asp-action="Index" class="btn btn-danger text-white rounded-pill" style="margin-right:10px">Back</a>
                </div>
            </div>
            <div class="table-responsive">

                <table id="myTeach" class="display nowrap" style="width:100%">
                    <thead>
                        <tr>

                            <th>Photo</th>
                            <th>Fullname</th>
                            <th>Email</th>
                            <th>Room Number</th>
                            <th>Status</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>   <img src="~/images/guest/@Model.Image" alt="image" style="width:100px; height:100px; border-radius:100px;" /></td>
                            <td>@Model.Name</td>
                            <td>@Model.Email</td>
                            <td>
                                @Model.Rooms.Name
                            </td>
                            <td>
                                @if (Model.IsDeactive)
                                {
                                    <span style="padding:1px 2px; background-color:red;color:white">Not Working</span>
                                }
                                else
                                {
                                    <span style="padding:1px 2px; background-color:green;color:white">Working</span>
                                }
                            </td>
                            <td>
                            </td>
                        </tr>


                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}