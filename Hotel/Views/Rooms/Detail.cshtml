@model Room
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-header" style="display:flex;justify-content:space-between">
                <h3>
                    Rooms
                </h3>
                <div>
                    <a asp-action="Index" class="btn btn-danger text-white rounded-pill" style="margin-right:10px">Back</a>


                </div>
            </div>

            <div class="table-responsive">

                <table class="display nowrap" style="width:100%">
                    <thead>
                        <tr>

                            <th>Photo</th>
                            <th>Room Number</th>
                            <th>Booking Status</th>
                            <th>Room Type</th>

                            <th>Payment</th>
                            <th>Status</th>



                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>  <img src="~/../../images/@Model.Image" alt="image" style="width:100px ;height:100px; border-radius:100px" /></td>
                            <td>@Model.Name</td>

                            <td>
                                @foreach (BookingRoom GroupStudent in Model.BookingRooms)
                                {
                                    <p>@GroupStudent.BookingStatus.Name</p>

                                }
                            </td>
                            <td>@Model.RoomTypes.Name</td>
                            <td>@Model.RoomTypes.Mark</td>



                            <td>
                                @if (Model.IsDeactive)
                                {
                                    <span style="padding:1px 2px; background-color:red;color:white">Deactive</span>
                                }
                                else
                                {
                                    <span style="padding:1px 2px; background-color:green;color:white">Active</span>
                                }
                            </td>

                        </tr>


                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

