@model List<Room>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-header" style="display:flex;justify-content:space-between">
                <h3>
                    Rooms
                </h3>
                <div>

                    <a asp-action="ShowAllRooms" type="button" class="btn btn-primary text-white rounded-pill" style="margin-right:10px">Show All Rooms</a>
                    <a asp-action="Create" class="btn btn-danger text-white rounded-pill" style="margin-right:10px">Add Room</a>
                </div>
            </div>

            <div class="table-responsive">

                <table id="myTable" class="display nowrap" style="width:100%">
                    <thead>
                        <tr>

                            <th>Photo</th>
                            <th>Room Number</th>
                            <th>Booking Status</th>
                            <th>Room Type</th>
                            <th>Status</th>
                            <th class="no-export"></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Room item in Model)
                        {
                            <tr>
                                <td>  <img src="~/../../images/room/@item.Image" alt="image" style="width:100px ;height:100px; border-radius:100px" /></td>
                                <td>@item.Name</td>
                                <td>
                                    @foreach (BookingRoom bookingRoom in item.BookingRooms)
                                    {
                                        <div>@bookingRoom.BookingStatus.Name</div>

                                    }
                                </td>
                                <td>@item.RoomTypes.Name</td>

                                <td>
                                    @if (item.IsDeactive)
                                    {
                                        <span style="padding:1px 2px; background-color:red;color:white">Deactive</span>
                                    }
                                    else
                                    {
                                        <span style="padding:1px 2px; background-color:green;color:white">Active</span>
                                    }
                                </td>
                                <td class="no-export">
                                    <div @*style="display:flex;justify-content:flex-end"*@>
                                        <a class="btn btn-warning text-white rounded-pill" style="margin-right:10px" asp-action="Detail" asp-route-id="@item.Id">Information</a>
                                        <a class="btn btn-info text-white rounded-pill" style="margin-right:10px" asp-action="Update" asp-route-id="@item.Id">Change</a>


                                        @if (item.IsDeactive)
                                        {
                                            <a class="btn btn-success text-white rounded-pill" style="margin-right:30px;width:100px" asp-action="Activity" asp-route-id="@item.Id">Activate</a>

                                        }
                                        else
                                        {
                                            <a class="btn btn-danger text-white rounded-pill" style="margin-right:30px;width:100px" asp-action="Activity" asp-route-id="@item.Id">Deactivate</a>

                                        }
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>

            </div>

            <div class="d-flex justify-content-center mt-3">
                <nav aria-label="...">
                    <ul class="pagination flex-wrap">
                        @if (ViewBag.Page != 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.Page-1)">Geri</a>
                            </li>
                        }
                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                        {
                            <li class="page-item"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
                        }

                        @if (ViewBag.Page != ViewBag.PageCount)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.Page+1)">İrəli</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
        <div>
        </div>
    </div>
</div>

@section Css {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css" />
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>

    <script src="~/js/dtExport.js"></script>
}
